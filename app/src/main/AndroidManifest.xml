<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.interapt.glass.tacobelltraining" >

    <uses-permission android:name="android.permission.RECORD_AUDIO" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.CAMERA" />

    <uses-feature android:name="android.hardware.camera" />

    <uses-permission android:name="android.permission.RECORD_AUDIO" />
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_tacobell_logo"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <meta-data
            android:name="com.google.android.gms.version"
            android:value="@integer/google_play_services_version" />

        <activity
            android:name=".SplashPageActivity"
            android:icon="@drawable/ic_tacobell_logo"
            android:label="@string/title_activity_main" >
            <intent-filter>
                <action android:name="com.google.android.glass.action.VOICE_TRIGGER" />
            </intent-filter>

            <meta-data
                android:name="com.google.android.glass.VoiceTrigger"
                android:resource="@xml/voice_trigger" />
        </activity>
        <activity
            android:name=".MainMenuActivity"
            android:label="@string/title_activity_main_menu" >
        </activity>
        <activity
            android:name=".SubMenuActivity"
            android:label="@string/title_activity_sub_menu" >
        </activity>
        <activity
            android:name=".TrainingActivity"
            android:label="@string/title_activity_training" >
        </activity>
        <activity
            android:name=".TestActivity"
            android:label="@string/title_activity_test" >
        </activity>
        <activity
            android:name=".GetIdActivity"
            android:label="@string/title_activity_get_id" >
        </activity>
        <activity
            android:name=".CardStyleMainMenuActivity"
            android:label="@string/title_activity_card_style_main_menu"
            android:launchMode= "singleTask">
        </activity>
        <activity
            android:name=".CardStyleSubMenuActivity"
            android:label="@string/title_activity_card_style_sub_menu"
            android:launchMode= "singleTask">
        </activity>
    </application>

</manifest>
