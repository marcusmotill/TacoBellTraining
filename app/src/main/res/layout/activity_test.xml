<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    android:keepScreenOn="true"
    tools:context="com.interapt.glass.tacobelltraining.TestActivity">

    <ImageView
        android:id="@+id/test_icon_imageview"
        android:layout_width="100px"
        android:layout_height="100px"
        android:layout_alignParentTop="true"
        android:layout_marginTop="50px"
        android:layout_centerHorizontal="true"/>

    <TextView
        android:id="@+id/prep_title_textview"
        android:text="Test Complete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif-thin"
        android:visibility="invisible"
        android:textSize="40px"
        android:layout_alignParentTop="true"
        android:layout_marginTop="160px"
        android:layout_centerHorizontal="true"/>

    <TextView
        android:id="@+id/prep_content_textview"
        android:text="Need prepared Bolillo Flatbread"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif-thin"
        android:textSize="40px"
        android:layout_alignParentTop="true"
        android:layout_marginTop="210px"
        android:layout_centerHorizontal="true"/>

    <TextView
        android:id="@+id/recording_prompt_textview"
        android:textSize="50px"
        android:text="You have 48 seconds"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif-thin"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:visibility="invisible"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/ic_timer"
        android:id="@+id/timer_imageview"
        android:layout_centerHorizontal="true"
        android:layout_above="@id/recording_prompt_textview"
        android:visibility="invisible"/>

    <FrameLayout
        android:id="@+id/camera_preview_framelayout"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true">
    </FrameLayout>

</RelativeLayout>
