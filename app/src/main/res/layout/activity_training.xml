<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/training_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:keepScreenOn="true"
    tools:context="com.interapt.mikenguyen.tacobelltraining.TrainingActivity">

    <TextView
        android:id="@+id/timer_texview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Large Text"
        android:fontFamily="sans-serif-light"
        android:textColor="#a0e141"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="17dp" />

    <ImageView
        android:id="@+id/play_pause_imageview"
        android:layout_width="10dp"
        android:layout_height="10dp"
        android:layout_marginBottom="25sp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="12dp"
        android:contentDescription="Play or Pause Icon" />

</RelativeLayout>
